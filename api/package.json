{
  "name": "api",
  "version": "1.0.0",
  "description": "API para o sistema DefesaAdministrativa.ValeVerde",
  "main": "dist/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:prod": "cross-env NODE_ENV=production tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "prod:setup": "npm run build:prod && npm run create-env:prod",
    "dev:setup": "npm run create-env:dev",
    "create-env:dev": "node -e \"require('fs').writeFileSync('.env', 'NODE_ENV=development\\nJWT_SECRET=defesa_admin_desenvolvimento_segredo_secreto\\nPORT=4000\\nCORS_ORIGIN=http://localhost:3000\\nSTORAGE_PATH=./uploads\\nDISABLE_RATE_LIMITS=true')\"",
    "create-env:prod": "node -e \"require('fs').writeFileSync('.env', 'NODE_ENV=production\\nJWT_SECRET='+require('crypto').randomBytes(32).toString('hex')+'\\nPORT=4000\\nCORS_ORIGIN=https://seu-site-de-producao.com\\nSTORAGE_PATH=./uploads\\nDISABLE_RATE_LIMITS=false')\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^22.14.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2"
  }
}
